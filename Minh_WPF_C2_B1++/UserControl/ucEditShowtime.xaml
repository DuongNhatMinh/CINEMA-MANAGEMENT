<UserControl x:Class="Minh_WPF_C2_B1.ucEditShowtime"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Minh_WPF_C2_B1"
             mc:Ignorable="d" Width="500">
    <Grid>
        <Label Background="Wheat"
               Height="25"
               HorizontalContentAlignment="Center"
               VerticalAlignment="Top">
            Manage Schedule
        </Label>

        <Label Content="Hour"
                   Width="100" Height="25"
                   HorizontalAlignment="Left" Margin="0,55,0,56.4"/>
        <TextBox Name="txtHour"
                     Width="100" Height="25"
                     HorizontalAlignment="Left" Margin="100,55,0,56">
        </TextBox>

        <Label Content="Minute"
                   Width="100" Height="25"
                   HorizontalAlignment="Left" Margin="248,55,0,56.8"/>
        <TextBox Name="txtMinute"
                     Width="100" Height="25"
                     HorizontalAlignment="Left" Margin="348,55,0,55.8">
        </TextBox>
    </Grid>
</UserControl>
